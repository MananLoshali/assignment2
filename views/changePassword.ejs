<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .class {
        width: 100%;
      }

      .container {
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      #form {
        width: 50%;
        display: flex;
        flex-direction: column;
        gap: 5px;
        justify-content: center;
        align-items: center;
      }
      .inputBox {
        width: 80%;
        height: auto;
        padding: 4px;
      }

      .button {
        cursor: pointer;
        width: 50%;
        height: auto;
        padding: 10px 10px 4px 4px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form id="form" name="myform" action="/changePassword" method="post">
        <input
          class="inputBox"
          type="number "
          placeholder="Enter Mobile Number"
          name="mobileNumber"
        />
        <input
          id="pass"
          class="inputBox"
          type="text"
          name="password"
          placeholder="Enter New Password"
        />
        <input
          id="newPass"
          class="inputBox"
          type="text "
          name="confirmPassword"
          placeholder="Confirm New Password"
        />
        <input class="button" type="submit" value="Change Password" id="btn" />
        <p id="error"></p>
      </form>
    </div>
    <script>
      const button = document.getElementById("form");
      button.addEventListener("submit", (e) => {
        //e.preventDefault();
        const pass = document.getElementById("pass").value;
        const newPass = document.getElementById("newPass").value;
        const error = document.getElementById("error");
        if (pass != newPass) {
          error.innerHTML = "Incorrect Password";
          e.preventDefault();
        }
      });
    </script>
  </body>
</html>
